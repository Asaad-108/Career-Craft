<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dashboard"
    android:weightSum="10"
    tools:context=".Activities.MyJobs">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:padding="10dp"
      android:orientation="vertical"
      android:weightSum="2.25"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:text="MY JOBS"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:textColor="#191923"
        android:textAlignment="center"
        >
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/rounded_corner"
        android:layout_margin="1dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:textColor="#191923"
        android:textColorHint="#191923"
        android:hint="Search">
    </EditText>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="6.75"
      android:weightSum="6.5"
      >
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/MyJobs"
        >
    </androidx.recyclerview.widget.RecyclerView>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.8"
      android:weightSum="1"
      android:padding="22dp"
      android:orientation="horizontal"
      >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:id="@+id/homeicon"
        android:src="@drawable/house">
    </ImageView>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        >
    </RelativeLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:id="@+id/searchicon"
        android:src="@drawable/search">
    </ImageView>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        >
    </RelativeLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:id="@+id/jobicon"
        android:src="@drawable/briefcase_business">
    </ImageView>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        >
    </RelativeLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:id="@+id/profileicon"
        android:src="@drawable/baseline_account_circle_24">
    </ImageView>
  </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.5"
      >
  </RelativeLayout>

</LinearLayout>