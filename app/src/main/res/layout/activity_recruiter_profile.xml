<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbfef9"
    android:weightSum="10"
    tools:context=".Activities.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.3"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            >
        </ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:textColor="#ffa400"
        android:text="YOUR CAREER, OUR CRAFT"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.2"
        android:weightSum="7.4"
        android:background="@drawable/dashboard"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/user_pen"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                >
            </ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="name"
            android:textSize="20dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#fbfef9"
            android:textColor="#191923"
            android:id="@+id/rname"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="#191923"
            android:id="@+id/remail"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#fbfef9"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="Company Name"
            android:textSize="20dp"
            android:textColor="#191923"
            android:textAlignment="center"
            android:id="@+id/rcompanyName"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#fbfef9"
            android:layout_margin="5dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="Designation"
            android:textSize="20dp"
            android:textColor="#191923"
            android:textAlignment="center"
            android:id="@+id/rdesignation"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#fbfef9"
            android:layout_margin="5dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="Phone"
            android:textSize="20dp"
            android:textColor="#191923"
            android:textAlignment="center"
            android:id="@+id/rphone"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#fbfef9"
            android:layout_margin="5dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="Location"
            android:textSize="20dp"
            android:textColor="#191923"
            android:textAlignment="center"
            android:id="@+id/rlocation"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#fbfef9"
            android:layout_margin="5dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Add Job"
            android:textSize="20dp"
            android:textColor="#191923"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:id="@+id/btnAddJob"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#ffa400"
            android:layout_margin="5dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Log out"
            android:textSize="20dp"
            android:textColor="#191923"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:id="@+id/logout"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#ffa400"
            android:layout_margin="5dp"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="1"
        android:padding="18dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:id="@+id/homeicon"
            android:src="@drawable/house">
        </ImageView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            >
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:id="@+id/searchicon"
            android:src="@drawable/search">
        </ImageView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            >
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:id="@+id/jobicon"
            android:src="@drawable/briefcase_business">
        </ImageView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            >
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:id="@+id/profileicon"
            android:src="@drawable/baseline_account_circle_24">
        </ImageView>
    </LinearLayout>

</LinearLayout>